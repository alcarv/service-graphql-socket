{
    "compilerOptions": {
        "target": "ES2022",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipDefaultLibCheck": true,
        "outDir": "./build",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules", "src/types/*"]
        }
    },
    "include": ["src/**/*"]
}